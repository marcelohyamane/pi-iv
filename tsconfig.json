{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",                // saída da compilação local
    "rootDir": ".",                  // base do projeto
    "resolveJsonModule": true,       // se quiser importar JSONs
    "moduleResolution": "node",      // padrão para Vercel/Node
    "types": ["node"]                // garante @types/node carregado
  },
  "include": ["api/**/*", "scripts/**/*"],   // garante que a pasta api está incluída
  "exclude": ["node_modules", "dist"]
}